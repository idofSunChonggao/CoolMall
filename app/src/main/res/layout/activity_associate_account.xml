<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mine.activity.AssociateAccountActivity">

    <com.nmsl.coolmall.core.widget.MyToolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="关联账号" />

    <LinearLayout
        android:id="@+id/qq_ll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/select_item_ripple_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="18dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_qq" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="QQ"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/qq_bind_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未实现"
            android:textColor="@color/colorSecondaryText"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/weibo_ll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/select_item_ripple_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="18dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_sina" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="新浪微博"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/weibo_bind_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未实现"
            android:textColor="@color/colorSecondaryText"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wechat_ll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/select_item_ripple_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="18dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_wechat" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="微信"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/wechat_bind_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未实现"
            android:textColor="@color/colorSecondaryText"
            android:textSize="16dp" />
    </LinearLayout>


</LinearLayout>