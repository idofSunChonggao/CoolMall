<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".core.activity.SplashActivity">

    <ImageView
        android:id="@+id/splash_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/splash_bg" />

    <com.nmsl.coolmall.core.widget.RoundTextView
        android:id="@+id/count_down_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:paddingStart="12dp"
        android:paddingTop="4dp"
        android:paddingEnd="12dp"
        android:paddingBottom="4dp"
        android:text="点击跳过"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:visibility="invisible"
        app:rtvBgColor="@color/black_70"
        app:rtvRadius="6dp" />
    <TextView
        android:id="@+id/splash_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/splash_tv2"
        android:layout_marginBottom="40dp"
        android:text="酷邦助手"
        android:textStyle = "bold"
        android:textColor="@color/white"
        android:textSize="50dp" />
    <TextView
        android:id="@+id/splash_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="智慧数据 便利生活"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/splash_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/splash_tv3"
        android:layout_marginBottom="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/enter_bg"
        android:gravity="center"
        android:text="进入"
        android:textColor="@color/white"
        android:textStyle = "italic"
        android:textSize="25dp" />
    <TextView
        android:id="@+id/splash_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/splash_tv4"
        android:text="酷邦团队提供服务"
        android:textColor="@color/white"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/splash_tv4"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="©coupon580.com"
        android:textColor="@color/white"
        android:textSize="15dp" />

</RelativeLayout>